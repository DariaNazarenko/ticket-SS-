@model ETicket.ApplicationServices.DTOs.RouteDto

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Route</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class="col-sm-2">
            <label> Route Stations</label>
        </dt>    
        <dd class="col-sm-10">
            <ol style="column-count: 3">
                <li>@Html.ActionLink(@Model.FirstStationName, "Details", "Station", new { id = @Model.FirstStationId }) </li>
                @foreach (var station in Model.StationNames)
                {
                    <li>@Html.ActionLink(station, "Details", "Station", new { id = station }, null) </li>
                }
                <li>@Html.ActionLink(@Model.LastStationName, "Details", "Station", new { id = @Model.LastStationId }) </li>
            </ol>
        </dd>
    </dl>
</div>
<div class="form-group">
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a href="javascript:history.back()">Back</a> |
    <a asp-action="Index">Back to Route List</a>
</div>
